{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2018",
		"outDir": "out",
		"lib": [
			"es2018",
			"dom"
		],
		"jsx": "react",
		"sourceMap": true,
		"strict": true,
		"removeComments": true,
		"esModuleInterop": true,
		"importsNotUsedAsValues": "preserve",
		"allowSyntheticDefaultImports": true
	},
	"exclude": [
		"node_modules"
	]
}